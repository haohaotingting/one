view,
text,
scroll-view,
input,
button,
image,
cover-view {
  box-sizing: border-box;
}

.lxy-nav-bar__inner {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 5001;
  height: var(--height);
  display: flex;
  align-items: center;
  padding-right: var(--right);
  width: 100%;
  padding-bottom: var(--navBarExtendHeight);
  background:url('https://wjh.augushong.com/huaxiang/0.png');
}

.lxy-nav-bar__inner .lxy-nav-bar__center {
  font-size: 17px;
  line-height: 17px;
  
  position: relative;
  flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 10px;
  /* background:red; */
}

.lxy-nav-bar-search {
  width: 100%;
  height: 100%;
  display: flex;
 
  align-items: center;




  /* background: #f6f6f6; */
}

.lxy-nav-bar-search__input {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content:flex-start;
  color: rgb(0, 0, 0);
  font-weight:700;
  font-size: 16px;
  font-family:KaiTi;
  padding-left:2px;
  /* background: url("https://wjh.augushong.com/huaxiang/daohanglan1.png"); */
}
